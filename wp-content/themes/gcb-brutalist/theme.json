{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "palette": [
        {
          "color": "#050505",
          "name": "Void Black",
          "slug": "void-black"
        },
        {
          "color": "#FAFAFA",
          "name": "Off-White",
          "slug": "off-white"
        },
        {
          "color": "#CCFF00",
          "name": "Acid Lime",
          "slug": "acid-lime"
        },
        {
          "color": "#333333",
          "name": "Brutal Border",
          "slug": "brutal-border"
        },
        {
          "color": "#999999",
          "name": "Brutal Grey",
          "slug": "brutal-grey"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "System Sans",
          "slug": "system-sans"
        },
        {
          "fontFamily": "'Playfair Display', Georgia, serif",
          "name": "Playfair Display",
          "slug": "playfair"
        },
        {
          "fontFamily": "'Space Mono', 'Courier New', monospace",
          "name": "Space Mono",
          "slug": "mono"
        }
      ],
      "fontSizes": [
        {
          "size": "0.875rem",
          "slug": "small",
          "name": "Small"
        },
        {
          "size": "1rem",
          "slug": "medium",
          "name": "Medium"
        },
        {
          "size": "1.25rem",
          "slug": "large",
          "name": "Large"
        },
        {
          "size": "2rem",
          "slug": "x-large",
          "name": "Extra Large"
        },
        {
          "size": "3rem",
          "slug": "xx-large",
          "name": "XX Large"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--void-black)",
      "text": "var(--wp--preset--color--off-white)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--system-sans)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "css": "body { -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; text-rendering: optimizeLegibility; }",
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--acid-lime)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--off-white)"
          },
          "textDecoration": "underline"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      }
    },
    "blocks": {
      "core/post-title": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--off-white)"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--acid-lime)"
              }
            }
          }
        }
      }
    }
  }
}
